<!DOCTYPE html>
<html>
  <head>
    {% block head %}
      <title>{{ title }} | University Radio York</title>
      <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
      <script type="text/javascript" src="{{shiburl}}js/jquery-1.9.1.js"></script>
      <script type="text/javascript" src="{{shiburl}}js/jquery-ui-1.10.1.custom.min.js"></script>
      <script type="text/javascript" src="{{shiburl}}js/jquery-ui-themeswitcher.js"></script>
      <script type="text/javascript" src="{{shiburl}}js/jquery-ui-init.js"></script>
      <link rel="Stylesheet" type="text/css" href="{{shiburl}}css/ury-purple/jquery-ui-1.10.1.custom.min.css">
      <link rel="Stylesheet" type="text/css" href="{{shiburl}}css/jquery-ui-themeswitcher.css">
      <!--<link rel="Stylesheet" type="text/css" href="{{shiburl}}css/reset.css">-->
      <link rel="stylesheet" type="text/css" href="{{shiburl}}css/main.css">
    {% endblock %}
    </head>
    <body>
      <header class="bar">
        <span class="fleft"><a href="./">My<span class="logotype">((URY))</span></a> | {{serviceName}} [{{serviceVersion}}]</span>
        <span>{{ name }} - [Impersonating If Set]{% if timeslotname is not null %} - <a href="https://ury.york.ac.uk/portal/timeslot.php?next={{ uri }}" title="Click to change timeslot">{{ timeslotname }}</a>{% endif %}</span>
        <span class="fright">{% if timeslotname is null %}<a href="https://ury.york.ac.uk/portal/timeslot.php?next={{ uri }}">Change Timeslot</a> | {% endif %}<a href="https://ury.york.ac.uk/portal/redir_out.php">Logout</a></span>
      </header>
      <div id="page">
        {% if phperrors is not null %}
          <ul class="php_error">
            {% for phperror in phperrors %}
              <li><strong>{{ phperror.name }}</strong> : {{ phperror.string|raw }} - In <strong>{{ phperror.file }}</strong> on line {{ phperror.line }}</li>
            {% endfor %}
          </ul>
        {% endif %}
        <h1 class="logotype">{{ title }}</h1>
{% block content %}{% endblock %}
{% block footer %}
      </div>
        <footer class="bar">
          <span class="fleft">Developed by <span class="logotype">((URY))</span> Computing 2011-2012.</span>
          <span class="fright"><a href="http://ury.org.uk/">ury.org.uk</a></span>
      </footer>
{% endblock %}
    </body>
  </html>