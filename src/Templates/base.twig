<!DOCTYPE html>
<html>
  <head>
    {% block head %}
      <title>{{ title }} | University Radio York</title>
      <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
      <script type="text/javascript" src="{{shiburl}}js/jquery-1.9.1.js"></script>
      <script type="text/javascript" src="{{shiburl}}js/jquery-ui-1.10.2.custom.min.js"></script>
      <script type="text/javascript" src="{{shiburl}}js/jquery-ui-themeswitcher.js"></script>
      <script type="text/javascript" src="{{shiburl}}js/jquery-ui-init.js"></script>
      <link rel="Stylesheet" type="text/css" href="{{shiburl}}css/ury-purple/jquery-ui-1.10.2.custom.min.css">
      <link rel="Stylesheet" type="text/css" href="{{shiburl}}css/jquery-ui-themeswitcher.css">
      <link rel="stylesheet" type="text/css" href="{{shiburl}}css/main.css">
      <link rel="Stylesheet" type="text/css" href="{{shiburl}}css/style.css">
    {% endblock %}
    </head>
    <body>
      <nav id="menu" class="transBG">
        <a id="miniLogo" href="./"><img alt="((ury))" height="20" src="/static/img/logo.png"></a>
        <ul>
          <li>{% if timeslotname is null %}<a href="https://ury.york.ac.uk/portal/timeslot.php?next={{ uri }}">Change Timeslot</a></li>
          <li>{% endif %}<a href="https://ury.york.ac.uk/portal/redir_out.php">Logout</a></li>
          <li><a href="http://ury.org.uk/">ury.org.uk</a></li>
        </ul>
        <div id="navRight">{{ name }}{{ impersonator }}{% if timeslotname is not null %} - <a href="https://ury.york.ac.uk/portal/timeslot.php?next={{ uri }}" title="Click to change timeslot">{{ timeslotname }}</a>{% endif %}</div>
      </nav>
        {% if phperrors is not null %}
          <ul class="php_error">
            {% for phperror in phperrors %}
              <li><strong>{{ phperror.name }}</strong> : {{ phperror.string|raw }} - In <strong>{{ phperror.file }}</strong> on line {{ phperror.line }}</li>
            {% endfor %}
                </ul>
        {% endif %}
{% block content %}{% endblock %}
{% block footer %}
              </div>
              <footer id="pageFooter" class="clearfix">
                <div id="copyright">
                  <p>&copy;1967-2013 University Radio York. Maintained by <a href="mailto:webmaster@ury.org.uk">URY Computing Team</a>
                  </div>
                </div>
                <ul>
                  <li><a href="http://www.york.ac.uk/docs/disclaimer/disclaimer.htm">Disclaimer</a></li>
                  <li><a href="http://ury.org.uk/contact/">Contact Us</a></li>
                </ul>
              </footer>
{% endblock %}
            </body>
          </html>