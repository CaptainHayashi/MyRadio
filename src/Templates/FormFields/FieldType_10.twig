<fieldset>
<legend>{{field.label}}</legend>
<div class="myuryfrmhint" id="{{frm_name}}-{{field.name}}-hint">{{field.explanation | raw}}</div>
{% for option in field.options %}
<label for="{{frm_name}}-{{field.name}}-{{option.value}}">
<input type="radio" name="{{frm_name}}-{{field.name}}" id="{{frm_name}}-{{field.name}}-{{option.value}}"
        class="{{field.class}} {{option.class}} radio{% if field.required %} required{% endif %}"
        value="{{option.value}}"{% if field.value == option.value %} checked="checked"{% endif %}
        {% if option.disabled or field.disabled %} disabled="disabled"{% endif %} />
{{option.text}}</label>
  {% endfor %}
</fieldset>