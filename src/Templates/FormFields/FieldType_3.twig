{#
 Using date as an input type is currently not recommended (as of 25/06/2012)
#}
<label for="{{name}}-{{field.name}}">{{field.label}}</label>
<input type="text" class="{{field.class}}{% if field.required %} required{% endif %} date"
       value="{{field.value}}" name="{{name}}-{{field.name}}" id="{{name}}-{{field.name}}"
       {% if not field.enabled %} readonly="readonly"{% endif %} placeholder="Day/Month/Year" />
<span class="myuryfrmhint" id="{{name}}-{{field.name}}-hint">{{field.explanation | raw}}</span>